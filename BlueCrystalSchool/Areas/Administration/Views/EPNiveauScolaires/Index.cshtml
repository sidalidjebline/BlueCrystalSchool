@model IEnumerable<BlueCrystalSchool.Areas.EtablissementPrive.Models.EPNiveauScolaire>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="ibox-content">

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover" id="listprof">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Filiere.Abreviation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Palier.NomPalier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Niveau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FraisInscription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TarifPaiementAnnuel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TarifPaiementTroisTranches)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TarifPaiementMensuel)
        </th>
        <th></th>   <th></th>   <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Filiere.Abreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Palier.NomPalier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Niveau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FraisInscription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarifPaiementAnnuel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarifPaiementTroisTranches)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarifPaiementMensuel)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) 
            </td><td>
           
                @Html.ActionLink("Details", "Details", new {id = item.Id}) 
               
            </td><td>
              
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }
    </tbody>


</table>
    </div>
</div>



@section scripts
{

    <script>

        $(function () {
            $("#listprof").dataTable({

                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                  
              
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });


    </script>
}